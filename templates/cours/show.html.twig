{% extends 'base.html.twig' %}

{% block title %}{{ cours.title }}{% endblock %}

{% block body %}
    <div class="container py-4">
        {% if is_granted('ROLE_TEACHER') and cours.teacher == app.user %}
            <a href="{{ path('app_cours') }}" class="btn btn-link text-muted mb-3"><i class="fas fa-arrow-left"></i> Retour à mes cours</a>
        {% else %}
            <a href="{{ path('app_cours') }}" class="btn btn-link text-muted mb-3"><i class="fas fa-arrow-left"></i> Retour aux cours</a>
        {% endif %}

        <div class="row">
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-start">
                    <h1 class="fw-bold mb-4">{{ cours.title }}</h1>
                    {% if is_granted('ROLE_TEACHER') and cours.teacher == app.user %}
                        <span class="badge bg-warning text-dark"><i class="fas fa-user-tie"></i> Mode Professeur</span>
                    {% endif %}
                </div>

                <p class="lead text-muted">{{ cours.contenu }}</p>

                <h4 class="mt-5 mb-3"><i class="fas fa-play-circle text-primary"></i> Vidéos du cours</h4>

                {% for video in cours.videos %}
                    <div class="card mb-3 border-0 shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0 fw-bold">{{ video.title }}</h6>
                                {% if video.duration > 0 %}
                                    <small class="text-muted"><i class="far fa-clock me-1"></i> {{ video.duration }} min</small>
                                {% endif %}
                            </div>

                            <div class="d-flex gap-2">
                                <a href="{{ asset('assets/video/' ~ video.url) }}" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-play me-1"></i> Regarder
                                </a>
                                {% if is_granted('ROLE_TEACHER') and cours.teacher == app.user %}
                                    <a href="{{ path('app_video_generate_qcm', {'id': video.id}) }}"
                                       class="btn btn-sm btn-outline-success"
                                       onclick="this.innerHTML='<i class=\'fas fa-spinner fa-spin\'></i> Analyse en cours...'; return confirm('L\'analyse vidéo prend du temps (transcription + IA). Patientez...');">
                                        <i class="fas fa-robot me-1"></i> QCM Auto
                                    </a>
                                {% endif %}
                                {% if is_granted('ROLE_TEACHER') and cours.teacher == app.user %}
                                    <button class="btn btn-sm btn-outline-danger" title="Supprimer la vidéo"><i class="fas fa-trash"></i></button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-light border text-center text-muted">
                        <i class="fas fa-video-slash mb-2"></i><br>Aucune vidéo disponible.
                    </div>
                {% endfor %}

                <hr class="my-5">
                <h4 class="mb-3"><i class="fas fa-tasks text-success"></i> QCMs disponibles</h4>

                <div class="row">
                    {% for qcm in cours.qcms %}
                        <div class="col-md-6 mb-3">
                            <div class="card border-success h-100">
                                <div class="card-body">
                                    <h5 class="card-title text-success" style="font-size: 1rem;">{{ qcm.title }}</h5>
                                    <p class="card-text text-muted small">{{ qcm.questions|length }} questions générées</p>

                                    <div class="d-grid gap-2 mt-3">
                                        <a href="#" class="btn btn-success btn-sm text-white">Passer le test</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-light border text-muted small">
                                Aucun QCM n'a encore été généré pour ce cours.
                            </div>
                        </div>
                    {% endfor %}
                </div>

            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0 mb-4 bg-light">
                    <div class="card-header bg-white fw-bold py-3">
                        <span><i class="fas fa-folder-open text-warning me-2"></i> Documents</span>
                    </div>

                    <div class="card-body p-2">
                        {% for doc in cours.documents %}
                            <div class="card mb-2 border-0 shadow-sm">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="text-truncate me-2">
                                            <i class="far fa-file-pdf text-danger me-1"></i>
                                            <span class="fw-bold">{{ doc.title }}</span>
                                        </div>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <a href="{{ asset('assets/document/' ~ doc.path) }}" target="_blank" class="btn btn-sm btn-outline-dark">
                                            <i class="fas fa-external-link-alt me-1"></i> Ouvrir le PDF
                                        </a>

                                        {% if is_granted('ROLE_TEACHER') and cours.teacher == app.user %}
                                            <a href="{{ path('app_document_generate_qcm', {'id': doc.id}) }}"
                                               class="btn btn-sm btn-success text-white"
                                               onclick="return confirm('Générer un QCM peut prendre quelques secondes. Confirmer ?');">
                                                <i class="fas fa-robot me-1"></i> Générer QCM via IA
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-center text-muted py-3 small">
                                <i class="fas fa-folder mb-2"></i><br>Aucun document joint.
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}