{% extends 'base.html.twig' %}

{% block title %}{{ cours.title }}{% endblock %}

{% block body %}
    <div class="container py-4">
        {# Navigation #}
        {% if is_granted('ROLE_TEACHER') and cours.teacher == app.user %}
            <a href="{{ path('teacher_cours') }}" class="btn btn-link text-muted mb-3"><i class="fas fa-arrow-left"></i> Retour à mes cours</a>
        {% else %}
            <a href="{{ path('teacher_cours') }}" class="btn btn-link text-muted mb-3"><i class="fas fa-arrow-left"></i> Retour aux cours</a>
        {% endif %}

        <div class="row">
            {# COLONNE GAUCHE : Contenu + Vidéos #}
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-start">
                    <h1 class="fw-bold mb-4">{{ cours.title }}</h1>
                    {% if is_granted('ROLE_TEACHER') and cours.teacher == app.user %}
                        <span class="badge bg-warning text-dark"><i class="fas fa-user-tie"></i> Mode Professeur</span>
                    {% endif %}
                </div>

                <p class="lead text-muted">{{ cours.contenu }}</p>

                {# SECTION VIDÉOS #}
                <h4 class="mt-5 mb-3"><i class="fas fa-play-circle text-primary"></i> Vidéos du cours</h4>

                {% for video in cours.videos %}
                    <div class="card mb-3 border-0 shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-center">

                            <div>
                                <h6 class="mb-0 fw-bold">{{ video.title }}</h6>
                                {% if video.duration > 0 %}
                                    <small class="text-muted"><i class="far fa-clock me-1"></i> {{ video.duration }} min</small>
                                {% endif %}
                            </div>

                            <div class="d-flex gap-2">
                                {# Bouton REGARDER #}
                                <a href="{{ asset('assets/video/' ~ video.url) }}" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-play me-1"></i> Regarder
                                </a>

                                {# GESTION PROFESSEUR #}
                                {% if is_granted('ROLE_TEACHER') and cours.teacher == app.user %}

                                    {% if hasAi is defined and hasAi %}

                                        <button type="button" class="btn btn-sm btn-dark text-white fw-bold" data-bs-toggle="modal" data-bs-target="#videoGenerateModal{{ video.id }}">
                                            <i class="fas fa-brain me-1"></i> Générer QCM (Grok)
                                        </button>

                                        {# MODALE GROK #}
                                        <div class="modal fade" id="videoGenerateModal{{ video.id }}" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    {# L'action pointe bien vers ta nouvelle route #}
                                                    <form action="{{ path('app_video_generate_ai', {'id': video.id}) }}" method="post">
                                                        <div class="modal-header bg-dark text-white">
                                                            <h5 class="modal-title"><i class="fas fa-robot me-2"></i>IA Grok & Whisper</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>

                                                        <div class="modal-body">
                                                            <div class="alert alert-info small">
                                                                <i class="fas fa-info-circle"></i> Grok va <strong>écouter</strong> la vidéo "{{ video.title }}" et générer un test.
                                                            </div>

                                                            <div class="mb-3">
                                                                <label class="form-label fw-bold">Type de questions</label>
                                                                <select name="type" class="form-select">
                                                                    <option value="qcm" selected>QCM (4 choix)</option>
                                                                    <option value="vrai_faux">Vrai ou Faux</option>
                                                                </select>
                                                            </div>

                                                            <div class="mb-3">
                                                                <label class="form-label fw-bold">Nombre de questions</label>
                                                                <input type="number" name="nb_questions" class="form-control" value="10" min="1" max="20">
                                                                <div class="form-text">Entre 1 et 20 questions.</div>
                                                            </div>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                            <button type="submit" class="btn btn-dark fw-bold" onclick="this.innerHTML='<i class=\'fas fa-spinner fa-spin\'></i> Analyse en cours...'">
                                                                <i class="fas fa-bolt text-warning"></i> Lancer Grok
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    {% else %}
                                        {# Si pas de clé API #}
                                        <button class="btn btn-sm btn-secondary" disabled title="Clé API Grok manquante">
                                            <i class="fas fa-brain me-1"></i> IA non dispo
                                        </button>
                                    {% endif %}

                                    {# Bouton SUPPRIMER #}
                                    <button class="btn btn-sm btn-outline-danger" title="Supprimer la vidéo"><i class="fas fa-trash"></i></button>

                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-light border text-center text-muted">
                        <i class="fas fa-video-slash mb-2"></i><br>Aucune vidéo disponible.
                    </div>
                {% endfor %}

                {# SECTION LISTE DES QCMs #}
                <hr class="my-5">
                <h4 class="mb-3"><i class="fas fa-tasks text-success"></i> QCMs disponibles</h4>

                <div class="row">
                    {% for qcm in cours.qcms %}
                        <div class="col-md-6 mb-3">
                            <div class="card border-success h-100">
                                <div class="card-body">
                                    <h5 class="card-title text-success" style="font-size: 1rem;">{{ qcm.title }}</h5>
                                    <p class="card-text text-muted small">{{ qcm.questions|length }} questions générées</p>
                                    <div class="d-grid gap-2 mt-3">
                                        <a href="#" class="btn btn-success btn-sm text-white">Passer le test</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-light border text-muted small">
                                Aucun QCM n'a encore été généré pour ce cours.
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            {# COLONNE DROITE : Documents (Je n'ai pas touché, mais tu peux appliquer la même logique si nécessaire) #}
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 mb-4 bg-light">
                    <div class="card-header bg-white fw-bold py-3">
                        <span><i class="fas fa-folder-open text-warning me-2"></i> Documents</span>
                    </div>

                    <div class="card-body p-2">
                        {% for doc in cours.documents %}
                            <div class="card mb-2 border-0 shadow-sm">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="text-truncate me-2">
                                            <i class="far fa-file-pdf text-danger me-1"></i>
                                            <span class="fw-bold">{{ doc.title }}</span>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <a href="{{ asset('assets/document/' ~ doc.path) }}" target="_blank" class="btn btn-sm btn-outline-dark">
                                            <i class="fas fa-external-link-alt me-1"></i> Ouvrir
                                        </a>

                                        {% if is_granted('ROLE_TEACHER') and cours.teacher == app.user %}
                                            <button type="button" class="btn btn-sm btn-success text-white" data-bs-toggle="modal" data-bs-target="#generateModal{{ doc.id }}">
                                                <i class="fas fa-robot me-1"></i> Générer QCM via IA
                                            </button>

                                            <div class="modal fade" id="generateModal{{ doc.id }}" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <form action="{{ path('app_document_generate_qcm', {'id': doc.id}) }}" method="post">
                                                            <div class="modal-header bg-success text-white">
                                                                <h5 class="modal-title"><i class="fas fa-brain me-2"></i>Configuration de l'IA</h5>
                                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>

                                                            <div class="modal-body">
                                                                <p class="text-muted small">L'IA va analyser <strong>{{ doc.title }}</strong> pour créer un test.</p>

                                                                <div class="mb-3">
                                                                    <label class="form-label fw-bold">Type de questions</label>
                                                                    <select name="type" class="form-select">
                                                                        <option value="qcm" selected>QCM (4 choix)</option>
                                                                        <option value="vrai_faux">Vrai ou Faux</option>
                                                                    </select>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label class="form-label fw-bold">Nombre de questions</label>
                                                                    <input type="number" name="nb_questions" class="form-control" value="10" min="1" max="20">
                                                                    <div class="form-text">Entre 1 et 20 questions.</div>
                                                                </div>
                                                            </div>

                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                                <button type="submit" class="btn btn-success" onclick="this.innerHTML='<i class=\'fas fa-spinner fa-spin\'></i> Génération...'">
                                                                    Lancer la génération
                                                                </button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-center text-muted py-3 small">
                                <i class="fas fa-folder mb-2"></i><br>Aucun document joint.
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}