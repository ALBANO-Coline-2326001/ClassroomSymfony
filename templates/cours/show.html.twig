{% extends 'base.html.twig' %}

{% block title %}{{ cours.title }}{% endblock %}

{% block body %}
    <div class="container py-4">
        <a href="{{ path('app_cours_index') }}" class="btn btn-link text-muted mb-3"><i class="fas fa-arrow-left"></i> Retour aux cours</a>

        <div class="row">
            <div class="col-lg-8">
                <h1 class="fw-bold mb-4">{{ cours.title }}</h1>
                <p class="lead text-muted">{{ cours.description }}</p>

                <h4 class="mt-5 mb-3"><i class="fas fa-play-circle text-primary"></i> Vidéos du cours</h4>
                {% for video in cours.videos %}
                    <div class="card mb-3 border-0 shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0 fw-bold">{{ video.title }}</h6>
                                <small class="text-muted">{{ video.duration }} min</small>
                            </div>
                            <a href="{{ video.url }}" target="_blank" class="btn btn-sm btn-outline-primary">Regarder</a>
                        </div>
                    </div>
                {% else %}
                    <p class="text-muted">Aucune vidéo disponible.</p>
                {% endfor %}
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white fw-bold py-3">
                        <i class="fas fa-folder-open text-warning me-2"></i> Documents
                    </div>
                    <div class="list-group list-group-flush">
                        {% for doc in cours.documents %}
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span>{{ doc.title }}</span>
                                <span class="badge bg-secondary rounded-pill">{{ doc.pages }}p</span>
                            </a>
                        {% else %}
                            <div class="list-group-item text-muted small">Aucun document.</div>
                        {% endfor %}
                    </div>
                </div>

                {% if is_granted('ROLE_ADMIN') or (app.user == cours.teacher) %}
                    <div class="card border-warning mb-3">
                        <div class="card-body">
                            <h6 class="text-warning fw-bold">Zone Professeur</h6>
                            <p class="small text-muted">Vous gérez ce cours.</p>
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-warning btn-sm">Modifier le cours</button>
                                <button class="btn btn-outline-danger btn-sm">Supprimer</button>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}