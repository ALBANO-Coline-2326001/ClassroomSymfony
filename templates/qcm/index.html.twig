{% extends 'base.html.twig' %}

{% block title %}Résultats du QCM{% endblock %}

{% block body %}
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0"><i class="fas fa-poll me-2"></i>Résultats des QCM</h5>
            <button class="btn btn-success btn-sm shadow"><i class="fas fa-file-export me-1"></i> Exporter en CSV</button>
        </div>

        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light text-muted text-uppercase small">
                <tr>
                    <th>Étudiant</th>
                    <th>QCM</th>
                    <th>Date</th>
                    <th>Score</th>
                    <th>Note</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if attempt %}
                    <tr class="fw-bold">
                        <td>{{ attempt.student.firstName }} {{ attempt.student.lastName }}</td>
                        <td>{{ attempt.qcm.title }}</td>
                        <td>{{ attempt.attemptedAt|date('d/m/Y') }}</td>
                        <td>{{ attempt.score }}/20</td>
                        <td>
                            {% if attempt.score >= 16 %}
                                <span class="badge bg-success-subtle text-success rounded-pill px-3">Excellent</span>
                            {% elseif attempt.score >= 10 %}
                                <span class="badge bg-warning-subtle text-warning rounded-pill px-3">Bien</span>
                            {% else %}
                                <span class="badge bg-danger-subtle text-danger rounded-pill px-3">À améliorer</span>
                            {% endif %}
                        </td>
                        <td><button class="btn btn-outline-primary btn-sm rounded-pill">Voir détails</button></td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    {% if attempt %}
        <div class="card border-0 shadow-sm bg-light">
            <div class="card-body">
                <h6 class="fw-bold mb-3"><i class="fas fa-clipboard-list me-2"></i>Détail des questions</h6>

                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="bg-white p-3 rounded border-start border-4 border-primary shadow-sm">
                            <small class="text-muted fw-bold">NOMBRE DE QUESTIONS</small>
                            <div class="h4 mb-0">5</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="bg-white p-3 rounded border-start border-4 border-success shadow-sm">
                            <small class="text-muted fw-bold">BONNES RÉPONSES</small>
                            <div class="h4 mb-0 text-success">4</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="bg-white p-3 rounded border-start border-4 border-danger shadow-sm">
                            <small class="text-muted fw-bold">MAUVAISES RÉPONSES</small>
                            <div class="h4 mb-0 text-danger">1</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="bg-white p-3 rounded border-start border-4 border-info shadow-sm">
                            <small class="text-muted fw-bold">TEMPS PASSÉ</small>
                            <div class="h4 mb-0 text-dark">18 min</div>
                        </div>
                    </div>
                </div>

                <div class="list-group shadow-sm">
                    {% for i in 1..5 %}
                        <div class="list-group-item d-flex justify-content-between align-items-center py-3 border-0 mb-1 rounded">
                            <span class="text-secondary fw-bold">Question {{ i }} : Exemple de question sur Symfony ?</span>
                            {% if i == 4 %}
                                <span class="text-danger fw-bold"><i class="fas fa-times me-1"></i> Incorrecte</span>
                            {% else %}
                                <span class="text-success fw-bold"><i class="fas fa-check me-1"></i> Correcte</span>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>

                <div class="mt-3">
                    <button class="btn btn-danger text-white fw-bold px-4">Fermer</button>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}